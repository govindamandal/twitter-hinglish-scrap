{
  "manifest_version": 3,
  "name": "Twitter Scraper",
  "description": "Scrape tweets from the current page and save them in a CSV file.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "downloads", "tabs"],
  "host_permissions": ["https://twitter.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
